<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.pz.cancha.LoginController">
   <items>
      <VBox alignment="CENTER" spacing="20.0" SplitPane.resizableWithParent="false">
         <children>
            <Label text="Login">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label text="Usuario" />
            <TextField fx:id="txtUsuarioLogin" maxWidth="200.0" promptText="digite su usuario" />
            <Label text="Constraseña" />
            <TextField fx:id="txtContraLogin" maxWidth="200.0" promptText="digite su contraseña" />
            <Button fx:id="btnLogin" onAction="#onActionLogin" text="Entrar" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" spacing="20.0" SplitPane.resizableWithParent="false">
         <children>
            <Label text="Registro">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label text="Usuario" />
            <TextField fx:id="txtUsuarioNuevo" maxWidth="200.0" promptText="digitar usuario nuevo" />
            <Label text="Email" />
            <TextField fx:id="txtEmailNuevo" maxWidth="200.0" promptText="digitar email nuevo" />
            <Label text="Contraseña" />
            <TextField fx:id="txtContraNueva1" maxWidth="200.0" promptText="digitar contraseña" />
            <Label text="Repetir Contraseña" />
            <TextField fx:id="txtContraNueva2" maxWidth="200.0" promptText="repetir contraseña" />
            <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#onActionRegistrar" text="Registrarse" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </items>
</SplitPane>
