<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="460.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.pz.cancha.LoginController">
   <children>
      <Label text="Login" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="Usuario" />
            <TextField fx:id="txtUsuarioLogin" maxWidth="200.0" promptText="digite su usuario" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="Constraseña" />
            <TextField fx:id="txtContraLogin" maxWidth="200.0" promptText="digite su contraseña" />
         </children>
      </HBox>
      <Hyperlink fx:id="hypRegistro" onAction="#onActionRegistrar" text="¿No tienes usuario? Haz click para registrar" />
      <Button fx:id="btnLogin" onAction="#onActionLogin" text="Entrar" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
