<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="PantallaInicio" alignment="CENTER" minHeight="420.0" minWidth="650.0" spacing="20.0" styleClass="PantallaInicio" stylesheets="@CSS.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.pz.cancha.LoginController">
   <children>
      <VBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Login">
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label text="Usuario" />
            <TextField fx:id="txtUsuarioLogin" maxWidth="200.0" promptText="digite su usuario" />
            <Label text="Constraseña" />
            <TextField fx:id="txtContraLogin" maxWidth="200.0" promptText="digite su contraseña" />
            <Button fx:id="btnLogin" onAction="#onActionLogin" text="Entrar" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </VBox>
      <SplitPane>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </SplitPane>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox alignment="BOTTOM_LEFT" spacing="20.0">
               <children>
                  <Label text="Registro: Hacer una cuenta nueva">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                  <Label text="Usuario" />
                  <TextField fx:id="txtUsuarioNuevo" maxWidth="200.0" promptText="digitar usuario nuevo" />
                  <Label text="Email" />
                  <TextField fx:id="txtEmailNuevo" maxWidth="200.0" promptText="digitar email nuevo" />
                  <Label text="Contraseña" />
                  <TextField fx:id="txtContraNueva1" maxWidth="200.0" promptText="digitar contraseña" />
                  <Label text="Repetir Contraseña" />
                  <TextField fx:id="txtContraNueva2" maxWidth="200.0" promptText="repetir contraseña" />
                  <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#onActionRegistrar" text="Registrarse" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</HBox>
